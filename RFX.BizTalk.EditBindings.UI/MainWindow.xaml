                <fluent:Backstage>
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <fluent:RibbonGroupBox Header="Group">
                        <fluent:Button Name="BtnOpen1" Header="Open"
                           Icon="Images\Open Folder-64 (2).png"

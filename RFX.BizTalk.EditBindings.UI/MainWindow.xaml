<Window x:Class="RFX.BizTalk.EditBindings.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RFX.BizTalk.EditBindings.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Save"></MenuItem>
            </MenuItem>
            <TextBox x:Name="textBox" Height="216" TextWrapping="Wrap" Text="TextBox" Width="490"/>
            <Button x:Name="button" Content="Button" Width="75" Click="button_Click"/>
        </Menu>
    </Grid>
</Window>

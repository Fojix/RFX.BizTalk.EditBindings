<UserControl x:Class="RFX.BizTalk.EditBindings.UI.Controls.UserControlGenericKeyValuePair"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RFX.BizTalk.EditBindings.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="300" Margin="2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label x:Name="LabelKey" Content="Name" Grid.Column="0" />
        <TextBox x:Name="TextBoxValue" Grid.Column="1" Text="Name" VerticalContentAlignment="Center" />
    </Grid>
</UserControl>
